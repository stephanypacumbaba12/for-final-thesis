<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/ll">

    <TextView
        android:id="@+id/textView"
        android:layout_width="179dp"
        android:layout_height="34dp"
        android:fontFamily="@font/oswald_semis_bold"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="6dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/subjectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald_semis_bold"
        android:gravity="center"
        android:text="Subject Name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.097" />

    <LinearLayout
        android:id="@+id/levelButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.46">

        <!-- Levels 1 and 2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <!-- Level 1 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/LvlOneAgefour"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="11dp"
                    android:layout_weight="1"
                    android:background="@drawable/level1"
                    android:padding="30dp"
                    android:textColor="#4A4A4A"
                    android:textSize="30dp" />

                <!-- Stars for Level 1 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/star1_level1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/transstar" />

                    <ImageView
                        android:id="@+id/star2_level1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/transstar" />

                    <ImageView
                        android:id="@+id/star3_level1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/transstar" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/star4_level1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/transstar" />

                    <ImageView
                        android:id="@+id/star5_level1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/transstar" />

                    <ImageView
                        android:id="@+id/star6_level1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/transstar" />
                </LinearLayout>

                <!-- Attempt text for Level 1 -->
                <TextView
                    android:id="@+id/attemptLevelOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/oswald_semis_bold"
                    android:text="Attempts: 0"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Level 2 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/LvlTwoAgefour"
                    android:layout_width="155dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/level2"
                    android:padding="30dp"
                    android:textColor="#2F4F4F"
                    android:textSize="30dp" />

                <!-- Stars for Level 2 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/star1_level2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/transstar" />

                    <ImageView
                        android:id="@+id/star2_level2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/transstar" />

                    <ImageView
                        android:id="@+id/star3_level2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/transstar" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/star4_level2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/transstar" />

                    <ImageView
                        android:id="@+id/star5_level2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/transstar" />

                    <ImageView
                        android:id="@+id/star6_level2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/transstar" />
                </LinearLayout>

                <!-- Attempt text for Level 2 -->
                <TextView
                    android:id="@+id/attemptLevelTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/oswald_semis_bold"
                    android:text="Attempts: 0"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Level 3 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/LvlThreeAgefour"
                android:layout_width="155dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:background="@drawable/level3"
                android:gravity="center"
                android:padding="30dp"
                android:textColor="#2E3B4E"
                android:textSize="30dp" />

            <!-- Stars for Level 3 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/star1_level3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/transstar" />

                <ImageView
                    android:id="@+id/star2_level3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/transstar" />

                <ImageView
                    android:id="@+id/star3_level3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/transstar" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/star4_level3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/transstar" />

                <ImageView
                    android:id="@+id/star5_level3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/transstar" />

                <ImageView
                    android:id="@+id/star6_level3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/transstar" />
            </LinearLayout>

            <!-- Attempt text for Level 3 -->
            <TextView
                android:id="@+id/attemptLevelThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/oswald_semis_bold"
                android:text="Attempts: 0"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/level_home"
        android:layout_width="50dp"
        android:layout_height="49dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/homeback"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.989"
        tools:ignore="MissingClass,MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>