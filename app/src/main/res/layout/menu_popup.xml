<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:backgroundTint="@color/blue1"
    android:background="@drawable/selected_background">


    <Button
        android:id="@+id/picker_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Picker"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:textSize="16sp"
        android:gravity="center" />

    <Button
        android:id="@+id/Number_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Number"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:textSize="16sp"
        android:gravity="center" />

    <Button
        android:id="@+id/Letters_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Letters"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:textSize="16sp"
        android:gravity="center" />

    <Button
        android:id="@+id/Shapes_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Shapes"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:textSize="16sp"
        android:gravity="center" />

    <Button
        android:id="@+id/Animals_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Animals"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:textSize="16sp"
        android:gravity="center" />

    <Button
        android:id="@+id/Colors_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Color"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:textSize="16sp"
        android:gravity="center" />

    <Button
        android:id="@+id/Vegetables_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Vegetable"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:textSize="16sp"
        android:gravity="center" />

    <Button
        android:id="@+id/btnResetAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Age"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:padding="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

</LinearLayout>